{$R *.dfm}

uses
 undmprincipal, uncadclientes;


procedure Tf_ConsultaClientes.act_ConsultarExecute(Sender: TObject);
begin
  inherited;
 if CbPesq.ItemIndex = 0 then
    Begin
      With DMPrincipal do
        begin

          qryClientes.Close;
          qryClientes.sql.add('Select * from clientes');
          qryClientes.Open;
        end;
    end;
     if CbPesq.ItemIndex = 1 then
    Begin
      With DMPrincipal do
        begin


            qryClientes.Close;
            qryclientes.SQL.Add('select * from  clientes where cli_idcliente like '+#39+'%'+editcon.Text+'%'+#39'');
            qryClientes.Open;

        end;
    end;
     if CbPesq.ItemIndex = 2 then
    Begin
      With DMPrincipal do
        begin

          qryClientes.close;
         qryclientes.SQL.Add('select * from clientes where cli_nome like '+#39+'%'+editcon.Text+'%'+#39'');
          qryClientes.Open;

        end;
    end;
    Label2.Caption := IntToStr(DMPrincipal.qryClientes.RecordCount);
end;

procedure Tf_ConsultaClientes.act_PesquisarExecute(Sender: TObject);
begin
  inherited;
 if CbPesq.ItemIndex = 0 then
    Begin
      With DMPrincipal do
        begin

          qryClientes.Close;
          qryClientes.sql.add('Select * from clientes');
          qryClientes.Open;
        end;
    end;
     if CbPesq.ItemIndex = 1 then
    Begin
      With DMPrincipal do
        begin


            qryClientes.Close;
            qryclientes.SQL.Clear;
            qryclientes.SQL.add('select * from  clientes where cli_idcliente like '+#39+'%'+editcon.Text+'%'+#39'''');
            qryClientes.Open;

        end;
    end;
     if CbPesq.ItemIndex = 2 then
    Begin
      With DMPrincipal do
        begin

          qryClientes.close;
          qryClientes.SQL.clear;
          qryclientes.SQL.add('select * from clientes where cli_nome like '+#39+'%'+editcon.Text+'%'+#39'''');
          qryClientes.Open;

        end;
    end;
    Label2.Caption := IntToStr(DMPrincipal.qryClientes.RecordCount);
end;

